<% @photos = product.photos %>
<div class="product_box">
  <div class="photo" style="cursor:pointer;">
    <span class="text">
      <%= form_for(product.line_items.build(product_id: product.id), :remote => true) do |f|%>
        <div style="display: inline; margin-right: 10px;" class="input-prepend input-append">
          <span class="add-on"><index_cp2 class="icon-chevron-down des_cnt"></i></span>
          <%= f.text_field :quantity, :value => 1 %>
          <span class="add-on"><i class="icon-chevron-up inc_cnt"></i></span>
        </div>
        <%= f.hidden_field :product_id%></br>
        <%= f.submit "加入购物车", :class => "btn add_cart" %>
      <% end %>
